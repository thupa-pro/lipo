# Loconomy Development Environment Configuration
# ==============================================

# üîß DEVELOPMENT OPTIMIZATIONS
# ==============================================
# Reduce development noise and warnings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
NEXT_BUILD_CACHE=true

# Suppress OpenTelemetry warnings in development
SUPPRESS_OTEL_WARNINGS=true
NODE_OPTIONS="--max-old-space-size=4096"

# ==============================================
# üîê AUTHENTICATION KEYS (Clerk Backend-Only)
# ==============================================
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk configuration for backend-only integration
CLERK_API_URL=https://api.clerk.com/v1
CLERK_JWT_VERIFICATION_KEY=your_clerk_jwt_verification_key_here

# ==============================================
# üõ°Ô∏è SECURITY & ENCRYPTION
# ==============================================
NEXTAUTH_SECRET=your_nextauth_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# JWT and session security
JWT_SECRET=your_jwt_secret_for_custom_sessions_here
SESSION_SECRET=your_session_secret_here

# ==============================================
# üóÑÔ∏è DATABASE (Supabase PostgreSQL)
# ==============================================
# Primary database connection
DATABASE_URL=postgresql://postgres:your_password@db.your_supabase_project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your_password@db.your_supabase_project.supabase.co:5432/postgres

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://your_supabase_project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database connection pool settings
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=2
DATABASE_IDLE_TIMEOUT=10000

# ==============================================
# üöÄ PERFORMANCE & CACHING
# ==============================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# CDN and asset optimization
NEXT_PUBLIC_CDN_URL=https://cdn.loconomy.com
IMAGE_OPTIMIZATION_URL=https://images.loconomy.com

# ==============================================
# üìä ANALYTICS & MONITORING
# ==============================================
# PostHog Analytics (leave empty to disable in development)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (leave empty to disable in development)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry Monitoring (leave empty to disable in development)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=loconomy
SENTRY_PROJECT=loconomy-app

# Custom analytics and tracking
ANALYTICS_API_KEY=your_analytics_api_key_here
TRACKING_ENABLED=false

# ==============================================
# üí≥ PAYMENT PROCESSING (Stripe)
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Connect for marketplace
STRIPE_CONNECT_CLIENT_ID=ca_your_stripe_connect_client_id_here
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your_connect_webhook_secret_here

# Subscription and billing configuration
STRIPE_PRICE_FREE_TIER=price_your_free_tier_price_id
STRIPE_PRICE_BASIC_TIER=price_your_basic_tier_price_id
STRIPE_PRICE_PROFESSIONAL_TIER=price_your_professional_tier_price_id
STRIPE_PRICE_ENTERPRISE_TIER=price_your_enterprise_tier_price_id

# Platform fee configuration (percentage)
PLATFORM_FEE_PERCENTAGE=10.0
PROCESSING_FEE_PERCENTAGE=2.9

# ==============================================
# üìß EMAIL SERVICE (Resend)
# ==============================================
RESEND_API_KEY=re_your_resend_api_key_here
SMTP_FROM=noreply@loconomy.com
SMTP_REPLY_TO=support@loconomy.com

# Email templates and branding
EMAIL_BRAND_COLOR=#6366f1
EMAIL_LOGO_URL=https://loconomy.com/logo.png

# ==============================================
# ü§ñ AI SERVICES
# ==============================================
OPENAI_API_KEY=sk-your_openai_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# AI service configuration
AI_MATCHING_ENABLED=true
AI_MODEL_PRIMARY=gpt-4
AI_MODEL_FALLBACK=gpt-3.5-turbo
AI_MAX_TOKENS=2048

# ==============================================
# üåê GEOLOCATION & MAPPING
# ==============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Geolocation service configuration
GEOCODING_PROVIDER=google
DEFAULT_REGION=US
DEFAULT_TIMEZONE=America/New_York

# ==============================================
# üîó SOCIAL & OAUTH INTEGRATIONS
# ==============================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Additional OAuth providers
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# ==============================================
# üì± MOBILE & PWA
# ==============================================
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_APP_NAME=Loconomy
NEXT_PUBLIC_APP_SHORT_NAME=Loconomy
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered hyperlocal services marketplace

# Push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
PUSH_NOTIFICATIONS_ENABLED=true

# ==============================================
# üåç INTERNATIONALIZATION
# ==============================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de,it,pt,zh,ja,ko

# Translation service
TRANSLATION_API_KEY=your_translation_api_key_here
AUTO_TRANSLATE_ENABLED=false

# ==============================================
# üè¢ MULTI-TENANCY
# ==============================================
TENANT_MODE=single
DEFAULT_TENANT=loconomy-us
TENANT_SUBDOMAIN_ENABLED=false

# Regional configuration
REGION_US_ENABLED=true
REGION_CA_ENABLED=true
REGION_EU_ENABLED=true
REGION_UK_ENABLED=true
REGION_AU_ENABLED=false

# ==============================================
# üîê RBAC & PERMISSIONS
# ==============================================
RBAC_ENABLED=true
PERMISSION_CACHING_TTL=300
ROLE_HIERARCHY_ENABLED=true

# Admin configuration
SUPER_ADMIN_EMAIL=admin@loconomy.com
ADMIN_PANEL_ENABLED=true

# ==============================================
# üìû COMMUNICATION
# ==============================================
# Real-time chat
CHAT_ENABLED=true
WEBSOCKET_URL=wss://ws.loconomy.com
CHAT_FILE_UPLOAD_MAX_SIZE=10485760

# Video calls (WebRTC)
VIDEO_CALLS_ENABLED=true
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_SERVER_USERNAME=your_turn_username
TURN_SERVER_PASSWORD=your_turn_password

# SMS notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_ENABLED=false

# ==============================================
# üìÅ FILE STORAGE
# ==============================================
STORAGE_PROVIDER=supabase
STORAGE_BUCKET_NAME=loconomy-files
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Image processing
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# ==============================================
# üîç SEARCH & INDEXING
# ==============================================
SEARCH_PROVIDER=postgresql
SEARCH_INDEX_ENABLED=true
ELASTICSEARCH_URL=http://localhost:9200

# Search configuration
SEARCH_RESULTS_PER_PAGE=20
SEARCH_RADIUS_DEFAULT=25
SEARCH_CACHE_TTL=1800

# ==============================================
# üéØ MARKETING & REFERRALS
# ==============================================
REFERRAL_SYSTEM_ENABLED=true
REFERRAL_REWARD_AMOUNT=25.00
REFERRAL_MINIMUM_SPEND=50.00

# Affiliate tracking
AFFILIATE_TRACKING_ENABLED=false
AFFILIATE_COMMISSION_RATE=5.0

# ==============================================
# ü§ù THIRD-PARTY INTEGRATIONS
# ==============================================
# Background checks
CHECKR_API_KEY=your_checkr_api_key_here
BACKGROUND_CHECKS_ENABLED=false

# Insurance verification
INSURANCE_VERIFICATION_ENABLED=false
INSURANCE_API_KEY=your_insurance_api_key_here

# Booking calendar integration
CALENDAR_SYNC_ENABLED=true
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# ==============================================
# üö® COMPLIANCE & LEGAL
# ==============================================
# Privacy and compliance
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
COOKIE_CONSENT_ENABLED=true

# Terms and privacy
TERMS_VERSION=2024.1
PRIVACY_POLICY_VERSION=2024.1
COOKIE_POLICY_VERSION=2024.1

# ==============================================
# üß™ TESTING & DEVELOPMENT
# ==============================================
# Feature flags
FEATURE_FLAGS_ENABLED=true
FEATURE_FLAG_CACHE_TTL=300

# Development tools
DEBUG_MODE=false
LOG_LEVEL=info
API_RATE_LIMITING_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=100

# Testing configuration
TEST_MODE=false
MOCK_PAYMENTS=true
MOCK_EMAIL=true
MOCK_SMS=true

# ==============================================
# üåê CDN & ASSETS
# ==============================================
NEXT_PUBLIC_ASSET_PREFIX=
CDN_ENABLED=false
STATIC_ASSET_CACHE_TTL=86400

# ==============================================
# üìà BUSINESS METRICS
# ==============================================
# KPI tracking
CONVERSION_TRACKING_ENABLED=true
FUNNEL_ANALYSIS_ENABLED=true
COHORT_ANALYSIS_ENABLED=true

# Revenue tracking
REVENUE_REPORTING_ENABLED=true
TAX_CALCULATION_ENABLED=false
FINANCIAL_REPORTING_ENABLED=true

# ==============================================
# üîß MAINTENANCE & HEALTH
# ==============================================
# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health
UPTIME_MONITORING_ENABLED=false

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing scheduled maintenance.

# ==============================================
# üîê API SECURITY
# ==============================================
# API rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000,https://loconomy.com
CORS_CREDENTIALS=true

# ==============================================
# END OF CONFIGURATION
# ==============================================
